{
  "compilerOptions": {
    "target": "ESNext",                          // Use the latest ECMAScript version
    "module": "ESNext",                          // Use ES module syntax (import/export)
    "moduleResolution": "Node",                   // Use Node-style module resolution
    "lib": ["ESNext", "DOM"],                     // Include the latest ECMAScript and DOM libraries
    "esModuleInterop": true,                      // Enable compatibility with CommonJS modules
    "skipLibCheck": true,                         // Skip type checking of declaration files (faster)
    "strict": true,                               // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true,     // Ensure consistent file naming across different systems
    "noImplicitAny": true,                        // Raise an error on any expressions with an implicit 'any' type
    "resolveJsonModule": true,                    // Allow importing JSON files as modules
    "isolatedModules": true,                      // Ensure each file can be transpiled independently
    "outDir": "./dist",                           // Output directory for compiled JavaScript files
    "rootDir": "./src",                           // Root directory for TypeScript files
    "allowJs": true,                              // Allow JavaScript files to be compiled
    "skipDefaultLibCheck": true,                  // Skip default library checking for better performance
    "declaration": true,                          // Generate declaration files for TypeScript
    "declarationDir": "./dist/types",             // Output directory for declaration files
    "sourceMap": true,                            // Generate source maps for debugging
    "resolveJsonModule": true,                    // Allow importing JSON files
    "incremental": true,                          // Enable incremental compilation for faster builds
    "baseUrl": ".",                               // Base directory for resolving non-relative module imports
    "paths": {                                    // Path mappings to alias module imports
      "@/*": ["src/*"]
    },
    "allowImportingTsExtensions": false,
  },
  "include": [
    "src/**/*.ts",                                // Include all TypeScript files in the src folder
    "src/**/*.tsx"                                // Include all TypeScript React files (if using React)
  ],
  "exclude": [
    "node_modules",                              // Exclude node_modules folder
    "dist"                                       // Exclude dist folder (output)
  ]
}